{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TCPPRDb;Trusted_Connection=True;Encrypt=False;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": true
    },
    "File": {
      "Path": "logs/log.txt",
      "RollingInterval": "Day",
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 5,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
    }
  },
  "Server": {
    "IPAddress": "127.0.0.1",
    "Port": "5000"
  },
  "AllowedHosts": "*"
}
